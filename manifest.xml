<?xml version="1.0" encoding="UTF-8"?>
<OfficeApp
  xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0"
  xmlns:mailappor="http://schemas.microsoft.com/office/mailappversionoverrides/1.0"
  xsi:type="MailApp">

  <!-- Basic Add-in Information -->
  <Id>a1b2c3d4-e5f6-7890-abcd-ef1234567890</Id>
  <Version>1.0.2.0</Version>
  <ProviderName>Procurement Team</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>
  <DisplayName DefaultValue="Procurement Workflow"/>
  <Description DefaultValue="Manage Purchase Requisitions, RFQs, and supplier communications directly in Outlook"/>
  <IconUrl DefaultValue="https://hexa-outlook-frontend.vercel.app/assets/icon-64.png"/>
  <HighResolutionIconUrl DefaultValue="https://hexa-outlook-frontend.vercel.app/assets/icon-128.png"/>
  <SupportUrl DefaultValue="https://hexa-outlook-frontend.vercel.app"/>

  <!-- Outlook-specific capabilities -->
  <Hosts>
    <Host Name="Mailbox"/>
  </Hosts>

  <!-- Minimum API requirements -->
  <Requirements>
    <Sets>
      <Set Name="Mailbox" MinVersion="1.5"/>
    </Sets>
  </Requirements>

  <!-- Form settings for different Outlook clients -->
  <FormSettings>
    <Form xsi:type="ItemRead">
      <DesktopSettings>
        <SourceLocation DefaultValue="https://hexa-outlook-frontend.vercel.app/src/taskpane/taskpane.html"/>
        <RequestedHeight>250</RequestedHeight>
      </DesktopSettings>
    </Form>
  </FormSettings>

  <!-- Permissions needed by the add-in -->
  <Permissions>ReadWriteMailbox</Permissions>

  <!-- Activation rules - when the add-in appears -->
  <Rule xsi:type="RuleCollection" Mode="Or">
    <Rule xsi:type="ItemIs" ItemType="Message" FormType="Read"/>
    <Rule xsi:type="ItemIs" ItemType="Message" FormType="Edit"/>
  </Rule>

  <!-- Version overrides for modern Outlook features -->
  <VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides" xsi:type="VersionOverridesV1_0">
    <VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides/1.1" xsi:type="VersionOverridesV1_1">
      
      <Requirements>
        <bt:Sets DefaultMinVersion="1.5">
          <bt:Set Name="Mailbox"/>
        </bt:Sets>
      </Requirements>

      <Hosts>
        <Host xsi:type="MailHost">
          
          <!-- Desktop Form Factor -->
          <DesktopFormFactor>
            
            <!-- Function file for command buttons -->
            <FunctionFile resid="Commands.Url"/>

            <!-- Extension point for Message Read surface -->
            <ExtensionPoint xsi:type="MessageReadCommandSurface">
              <OfficeTab id="TabDefault">
                <Group id="msgReadGroup">
                  <Label resid="GroupLabel"/>
                  
                  <!-- Main Task Pane Button -->
                  <Control xsi:type="Button" id="TaskPaneBtn">
                    <Label resid="TaskPaneBtn.Label"/>
                    <Supertip>
                      <Title resid="TaskPaneBtn.Label"/>
                      <Description resid="TaskPaneBtn.Tooltip"/>
                    </Supertip>
                    <Icon>
                      <bt:Image size="16" resid="Icon.16x16"/>
                      <bt:Image size="32" resid="Icon.32x32"/>
                      <bt:Image size="80" resid="Icon.80x80"/>
                    </Icon>
                    <Action xsi:type="ShowTaskpane">
                      <SourceLocation resid="Taskpane.Url"/>
                      <SupportsPinning>true</SupportsPinning>
                    </Action>
                  </Control>

                </Group>
              </OfficeTab>
            </ExtensionPoint>

            <!-- Extension point for Message Compose surface -->
            <ExtensionPoint xsi:type="MessageComposeCommandSurface">
              <OfficeTab id="TabDefault">
                <Group id="msgComposeGroup">
                  <Label resid="GroupLabel"/>
                  
                  <Control xsi:type="Button" id="TaskPaneBtnCompose">
                    <Label resid="TaskPaneBtn.Label"/>
                    <Supertip>
                      <Title resid="TaskPaneBtn.Label"/>
                      <Description resid="TaskPaneBtn.Tooltip"/>
                    </Supertip>
                    <Icon>
                      <bt:Image size="16" resid="Icon.16x16"/>
                      <bt:Image size="32" resid="Icon.32x32"/>
                      <bt:Image size="80" resid="Icon.80x80"/>
                    </Icon>
                    <Action xsi:type="ShowTaskpane">
                      <SourceLocation resid="Taskpane.Url"/>
                      <SupportsPinning>true</SupportsPinning>
                    </Action>
                  </Control>

                </Group>
              </OfficeTab>
            </ExtensionPoint>

          </DesktopFormFactor>

          <!-- Mobile Form Factor -->
          <MobileFormFactor>
            <FunctionFile resid="Commands.Url"/>
            <ExtensionPoint xsi:type="MobileMessageReadCommandSurface">
              <Group id="mobileReadGroup">
                <Label resid="GroupLabel"/>
                <Control xsi:type="MobileButton" id="MobileTaskPaneBtn">
                  <Label resid="TaskPaneBtn.Label"/>
                  <Icon>
                    <bt:Image size="25" scale="1" resid="Icon.32x32"/>
                    <bt:Image size="25" scale="2" resid="Icon.64x64"/>
                    <bt:Image size="25" scale="3" resid="Icon.80x80"/>
                    <bt:Image size="32" scale="1" resid="Icon.32x32"/>
                    <bt:Image size="32" scale="2" resid="Icon.64x64"/>
                    <bt:Image size="32" scale="3" resid="Icon.80x80"/>
                    <bt:Image size="48" scale="1" resid="Icon.48x48"/>
                    <bt:Image size="48" scale="2" resid="Icon.80x80"/>
                    <bt:Image size="48" scale="3" resid="Icon.128x128"/>
                  </Icon>
                  <Action xsi:type="ShowTaskpane">
                    <SourceLocation resid="Taskpane.Url"/>
                  </Action>
                </Control>
              </Group>
            </ExtensionPoint>
          </MobileFormFactor>

        </Host>
      </Hosts>

      <!-- Resources referenced by the manifest -->
      <Resources>
        <bt:Images>
          <bt:Image id="Icon.16x16" DefaultValue="https://hexa-outlook-frontend.vercel.app/assets/icon-16.png"/>
          <bt:Image id="Icon.32x32" DefaultValue="https://hexa-outlook-frontend.vercel.app/assets/icon-32.png"/>
          <bt:Image id="Icon.48x48" DefaultValue="https://hexa-outlook-frontend.vercel.app/assets/icon-48.png"/>
          <bt:Image id="Icon.64x64" DefaultValue="https://hexa-outlook-frontend.vercel.app/assets/icon-64.png"/>
          <bt:Image id="Icon.80x80" DefaultValue="https://hexa-outlook-frontend.vercel.app/assets/icon-80.png"/>
          <bt:Image id="Icon.128x128" DefaultValue="https://hexa-outlook-frontend.vercel.app/assets/icon-128.png"/>
        </bt:Images>
        <bt:Urls>
          <bt:Url id="Taskpane.Url" DefaultValue="https://hexa-outlook-frontend.vercel.app/src/taskpane/taskpane.html"/>
          <bt:Url id="Commands.Url" DefaultValue="https://hexa-outlook-frontend.vercel.app/src/commands/commands.html"/>
        </bt:Urls>
        <bt:ShortStrings>
          <bt:String id="GroupLabel" DefaultValue="Procurement"/>
          <bt:String id="TaskPaneBtn.Label" DefaultValue="Procurement Workflow"/>
          <bt:String id="ClassifyBtn.Label" DefaultValue="Classify Email"/>
        </bt:ShortStrings>
        <bt:LongStrings>
          <bt:String id="TaskPaneBtn.Tooltip" DefaultValue="Open the procurement workflow panel to manage PRs, RFQs, and supplier communications"/>
          <bt:String id="ClassifyBtn.Tooltip" DefaultValue="Classify the current email as a quote or clarification request"/>
        </bt:LongStrings>
      </Resources>

    </VersionOverrides>
  </VersionOverrides>

</OfficeApp>
